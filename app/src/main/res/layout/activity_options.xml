        android:src="@drawable/bean"
        android:layout_marginBottom="-45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="160dp"
        android:layout_height="300dp"/>

</RelativeLayout>